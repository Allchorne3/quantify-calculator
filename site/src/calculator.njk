<div class="wrapper">  
	<h1>Calculator</h1>

	<div class="container">
		<section class="calculator">
			<div class="tabs">
				<ul>
					<li><a href="#" data-target="days" class="active">Days</a></li>
					<li><a href="#" data-target="balance">Balance</a></li>
				</ul>
			</div>    
			
			<div class="content">
				<div id="days">
					{% include "days-form.njk" %}
				</div>

				<div id="balance" class="hidden">
					{% include "balance-form.njk" %}
				</div>
			</div>
		</section>

		<div class="buttons is-centered">
			<button class="clear hidden">Clear Table</button>
			<button id="downloadExcel" class="disabled hidden">Export to Excel</button>
			<button id="downloadExcelRows" class="disabled hidden">Export Highlights</button>
			<button id="remove-highlights" class="disabled hidden">Clear highlights</button>
		</div>

		<table class="hidden">
			<thead>
				<tr>
					<th>Day</th>
					<th>Daily</th>
					<th>Acc Earnings</th>
					<th>Percentage</th>
					<th>Balance</th>
				</tr>
			</thead>
		</table>
	</div>
</div>

<script src="https://cdn.sheetjs.com/xlsx-0.20.0/package/dist/xlsx.full.min.js" defer></script>
