---
layout: base.njk
lightHeader: true
lightBody: true
pageClass: post
---

<div class="hero">
    <div class="hero-body"></div>
</div>

<div class="container">
    <div class="guide-article">
        <div class="navigation">
            <a href="/guides/"><i class="fa-solid fa-chevron-left"></i> Back to guides</a>
        </div>

        <article class="main-article {{ category }}">
            <h1 class="article-title">{{ title }}</h1>
            <h4 class="article-date">{{ date | prettyDate}} <span class="divider">|</span> {{ content | emojiReadTime }} </h4>
            {{ content | safe }}
            {% include "tch-cta.njk" %}
            {% include "contact-cta.njk" %}
        </article>

    </div>
</div>

